[core]
	editor = /bin/vim
	autocrlf = true
	filemode = false
	ignoreCygwinFSTricks = true
[user]
	name = Steffen Dienst
	email = sdienst@informatik.uni-leipzig.de
	signingkey = 851C9D55
[alias]
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lg = log --graph --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit 
[color]
	branch = auto
	diff = auto
	status = auto
	interactive = auto
	ui = auto
